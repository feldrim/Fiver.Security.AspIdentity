@model Fiver.Security.AspIdentity.Models.Security.ResetPasswordViewModel

<form asp-controller="Security" asp-action="ResetPassword" method="post">
    <div class="form-group">
        <div asp-validation-summary="All"></div>
        <div class="col-4">
            <input asp-for="Code" type="hidden"/>
            <input type="text" class="form-control" asp-for="UserName" placeholder="Username"/><br/>
            <input type="password" class="form-control" asp-for="Password" placeholder="Password"/><br/>
            <input type="password" class="form-control" asp-for="ConfirmPassword" placeholder="Confirm Password"/><br/>
            <input type="submit" class="btn btn-outline-dark" value="Reset"/>
        </div>
    </div>
</form>
